<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.cryptopunks.astral.service">

    <application
        android:allowBackup="true"
        android:label="@string/astral_node_app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Astrald">
        <service
            android:name=".AstralService"
            android:exported="true"/>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/astral_node_app_name"
            android:launchMode="singleTop"
            android:taskAffinity="cc.cryptopunks.astral.service.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
